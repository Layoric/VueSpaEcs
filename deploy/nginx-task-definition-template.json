{
  "family": "nginx-proxy",
  "requiresCompatibilities": [
    "EC2"
  ],
  "memory": "192",
  "containerDefinitions": [
    {
      "portMappings": [
        {
          "hostPort": 80,
          "protocol": "tcp",
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "protocol": "tcp",
          "containerPort": 443
        }
      ],
      "cpu": 0,
      "environment": [
        {
          "name": "DOCKER_PROVIDER",
          "value": "ECS"
        }
      ],
      "mountPoints": [
        {
          "readOnly": true,
          "containerPath": "/tmp/docker.sock",
          "sourceVolume": "docker-sock"
        },
        {
          "containerPath": "/etc/nginx/certs",
          "sourceVolume": "var-certs"
        },
        {
          "containerPath": "/usr/share/nginx/html",
          "sourceVolume": "var-ngnix-html"
        },
        {
          "containerPath": "/etc/nginx/vhost.d",
          "sourceVolume": "var-ngnix-vhostd"
        }
      ],
      "dockerSecurityOptions": [],
      "memory": 150,
      "volumesFrom": [],
      "image": "jwilder/nginx-proxy",
      "essential": true,
      "dockerLabels": {
        "com.github.jrcs.letsencrypt_nginx_proxy_companion.nginx_proxy": ""
      },
      "name": "nginx-proxy",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "nginx-proxy",
          "awslogs-region": "${AWS_REGION}"
        }
      }
    },
    {
      "portMappings": [],
      "cpu": 0,
      "environment": [
        {
          "name": "DOCKER_PROVIDER",
          "value": "ECS"
        }
      ],
      "mountPoints": [
        {
          "containerPath": "/etc/nginx/certs",
          "sourceVolume": "var-certs"
        },
        {
          "readOnly": true,
          "containerPath": "/var/run/docker.sock",
          "sourceVolume": "docker-sock"
        },
        {
          "containerPath": "/usr/share/nginx/html",
          "sourceVolume": "var-ngnix-html"
        },
        {
          "containerPath": "/etc/nginx/vhost.d",
          "sourceVolume": "var-ngnix-vhostd"
        }
      ],
      "volumesFrom": [],
      "image": "jrcs/letsencrypt-nginx-proxy-companion",
      "essential": true,
      "name": "jrcs-letsencrypt-nginx-proxy-companion"
    }
  ],
  "volumes": [
    {
      "name": "docker-sock",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    },
    {
      "name": "var-certs",
      "host": {
        "sourcePath": "/var/ngnix/certs/"
      }
    },
    {
      "name": "var-ngnix-html",
      "host": {
        "sourcePath": "/var/ngnix/html"
      }
    },
    {
      "name": "var-ngnix-vhostd",
      "host": {
        "sourcePath": "/var/ngnix/vhost.d"
      }
    }
  ]
}